type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  isPublished: Boolean! @default(value: "false")
  title: String!
  content: String!
  author: User!
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  stall: Stall
}

type Stall {
  id: ID! @unique
  lng: String!
  lat: String!
  name: String @unique
  description: String
  owner: User!
  markets: [Market!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Market {
  id: ID! @unique
  name: String!
  province: Province
  stalls: [Stall!]!
}

type Province {
  id: ID! @unique
  name: String!
  markets: [Market!]!
}

