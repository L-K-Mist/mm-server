type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  isPublished: Boolean! @default(value: "false")
  title: String!
  content: String!
  author: User!
}

type User {
  id: ID! @unique
  password: String! 
  name: String!
  email: String! @unique
  cell: String
  posts: [Post!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  stall: Stall
  role: String
  image: String
  publicEmail: String
  publicName: String
  bio: String
}

type Stall {
  id: ID! @unique
  image: String
  w3w: String
  lng: String!
  lat: String!
  name: String @unique
  description: String
  owner: User!
  markets: [Market!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Market {
  id: ID! @unique
  name: String! @unique
  lat: Float
  lng: Float
  w3w: String
  image: String
  province: Province
  stalls: [Stall!]!
}

type Province {
  id: ID! @unique
  name: String! @unique
  markets: [Market!]!
}

