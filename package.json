{
  "name": "node-graphql-auth-advanced",
  "version": "1.0.0",
  "description": "This example demonstrates how to implement a GraphQL server with an email-password-based authentication workflow based on Prisma & graphql-yoga.",
  "author": "Prisma",
  "scripts": {
    "start": "nodemon -e js,graphql -x node -r dotenv/config src/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config src/index.js",
    "playground": "graphql playground",
    "dev": "npm-run-all --parallel start playground"
  },
  "dependencies": {
    "bcrypt": "3.0.1",
    "graphql": "0.13.2",
    "graphql-shield": "3.2.5",
    "graphql-yoga": "1.16.2",
    "jsonwebtoken": "8.3.0",
    "prisma-client-lib": "0.2.59"
  },
  "devDependencies": {
    "dotenv": "6.1.0",
    "nodemon": "1.18.6",
    "npm-run-all": "4.1.3"
  }
}
